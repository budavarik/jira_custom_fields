  <!-- Custom Field Searchers Működik, de ~ jellel
  <customfield-searcher key="richter-regex-cf-textsearcher" name="Free Text Searcher" class="com.atlassian.jira.issue.customfields.searchers.TextSearcher">
    <description>Search for values using a free text search.</description>
    <resource type="velocity" name="search" location="/templates/regex-search-basictext.vm"/>
    <resource type="velocity" name="view" location="/templates/regex-view-searcher-basictext.vm"/>
    <valid-customfield-type package="hu.local.plugins.jira" key="richter-regex-cf"/>
  </customfield-searcher> -->




  <!-- Web Items -->
  <web-section key="richter-regex-configuration-section" location="admin_plugins_menu">
    <label key="hu.local.plugins.jira.richerregexfield.section"/>
  </web-section>
  <web-item key="richter-regex-configuration-settings" name="Configure Richter Regex Custom Fields" section="admin_plugins_menu/richter-regex-configuration-section" weight="95">
    <label key="hu.local.plugins.jira.richerregexfield.settings.title">Configure Richter Regex Custom Fields</label>
    <description key="hu.local.plugins.jira.richerregexfield.settings.desc">On this page you can see and configure all Richter Regex Custom Fields.</description>
    <condition class="com.atlassian.jira.plugin.webfragment.conditions.JiraGlobalPermissionCondition"><param name="permission">admin</param></condition>
    <link linkId="richter-regex-configuration-settings">/secure/RichterRegexConfig!default.jspa</link>
  </web-item>
  <web-item key="richter-regex-tester-action" name="Regex Tester" section="admin_plugins_menu/richter-regex-configuration-section" weight="95">
    <label key="hu.local.plugins.jira.richerregexfield.tester.title">Regex Tester</label>
    <description key="hu.local.plugins.jira.richerregexfield.settings.desc">On this page you can test Regex expression for fields.</description>
    <condition class="com.atlassian.jira.plugin.webfragment.conditions.JiraGlobalPermissionCondition"><param name="permission">admin</param></condition>
    <link linkId="richter-regex-tester-action">/secure/RichterRegexTesterAction!default.jspa</link>
  </web-item>

  <!-- WebWork1 -->
  <webwork1 key="richter_regex_action" name="Richter regex fields configure action" class="java.lang.Object">
    <actions>
      <action name="hu.local.plugins.jira.customfields.action.RichterRegexConfig" alias="RichterRegexConfig">
        <view name="input">/templates/action/richterregexconfig.vm</view>
        <view name="success">/templates/action/richterregexconfig.vm</view>
        <view name="permissionviolation">/secure/views/permissionviolation.jsp</view>
        <view name="configure">/templates/action/uniqueregexconfigfield.vm</view>
      </action>
      <action name="hu.local.plugins.jira.customfields.action.RichterRegexFieldConfig" alias="RichterRegexFieldConfig">
        <view name="input">/templates/action/uniqueregexconfigfield.vm</view>
        <view name="success">/templates/action/uniqueregexconfigfield.vm</view>
        <view name="permissionviolation">/secure/views/permissionviolation.jsp</view>
      </action>
      <action name="hu.local.plugins.jira.customfields.action.admin.RichterRegexTesterAction" alias="RichterRegexTesterAction">
        <view name="input">/templates/action/admin/uniqueregextester.vm</view>
        <view name="success">/templates/action/admin/uniqueregextester.vm</view>
        <view name="permissionviolation">/secure/views/permissionviolation.jsp</view>
      </action>
      <action name="hu.local.plugins.jira.customfields.action.field.RichterRegexCFRegexConfigAction" alias="RichterRegexCFRegexConfigAction">
        <view name="success">/templates/action/field/regexconfig.vm</view>
        <view name="permissionviolation">/secure/views/permissionviolation.jsp</view>
      </action>
      <action name="hu.local.plugins.jira.customfields.field.UniqueRegexCFUniqueConfigAction" alias="UniqueRegexCFUniqueConfigAction">
        <view name="success">/templates/action/field/uniqueconfig.vm</view>
        <view name="permissionviolation">/secure/views/permissionviolation.jsp</view>
      </action>
    </actions>
  </webwork1>

  <!-- Components -->
  <component key="richter-regex-manager" name="Manager of unique regex fields" class="hu.local.plugins.jira.customfields.manager.UniqueRegexMgrImpl">
    <interface>hu.local.plugins.jira.customfields.manager.UniqueRegexMgr</interface>
  </component>
  <component key="richter-regex-regex-settings-manager" class="hu.local.plugins.jira.customfields.manager.impl.RegexSettingsManagerImpl" public="true">
    <interface>hu.local.plugins.jira.customfields.manager.RegexSettingsManager</interface>
  </component>
  <component key="richter-regex-unique-settings-manager" class="hu.local.plugins.jira.customfields.manager.impl.UniqueSettingsManagerImpl" public="true">
    <interface>hu.local.plugins.jira.customfields.manager.UniqueSettingsManager</interface>
  </component>
  <component-import key="pluginSettingsFactory">
    <interface>com.atlassian.sal.api.pluginsettings.PluginSettingsFactory</interface>
  </component-import>
  <component-import key="applicationProperties">
    <interface>com.atlassian.sal.api.ApplicationProperties</interface>
  </component-import>


</atlassian-plugin>
